<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:background="@color/main_color"
            android:gravity="center"
            android:text="@string/number_systems_calculator"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/et_binary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_binary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="4dp"
            android:text="@string/binary"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/et_binary"
            app:layout_constraintStart_toStartOf="@+id/et_binary" />

        <EditText
            android:id="@+id/et_binary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="38dp"
            android:background="@drawable/et_background"
            android:inputType="number"
            android:digits="01"
            android:maxLines="2"
            app:layout_constraintBottom_toTopOf="@+id/et_octal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="50dp"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_octal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="4dp"
            android:text="@string/octal"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/et_octal"
            app:layout_constraintStart_toStartOf="@+id/et_octal" />

        <EditText

            android:id="@+id/et_octal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:inputType="number"
            android:digits="01234567"
            android:maxLines="2"
            android:background="@drawable/et_background"
            app:layout_constraintBottom_toTopOf="@+id/et_decimal"
            app:layout_constraintEnd_toEndOf="@+id/et_binary"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/et_binary"
            app:layout_constraintTop_toBottomOf="@+id/et_binary" />

        <TextView
            android:id="@+id/tv_Decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="4dp"
            android:text="@string/deimal"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/et_decimal"
            app:layout_constraintStart_toStartOf="@+id/et_decimal" />

        <EditText

            android:id="@+id/et_decimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/et_background"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:maxLines="2"
            android:scrollHorizontally="true"
            app:layout_constraintBottom_toTopOf="@+id/et_hexadecimal"
            app:layout_constraintEnd_toEndOf="@+id/et_octal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/et_octal"
            app:layout_constraintTop_toBottomOf="@+id/et_octal" />

        <TextView
            android:id="@+id/tv_hexadecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="4dp"
            android:text="@string/hexa_decimal"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/et_hexadecimal"
            app:layout_constraintStart_toStartOf="@+id/et_hexadecimal" />

        <EditText

            android:id="@+id/et_hexadecimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:maxLines="2"
            android:background="@drawable/et_background"
            app:layout_constraintBottom_toTopOf="@+id/btn_clear"
            app:layout_constraintEnd_toEndOf="@+id/et_decimal"
            app:layout_constraintHorizontal_bias="0.5"
            android:digits="0123456789ABCDEFabcdef"
            app:layout_constraintStart_toStartOf="@+id/et_decimal"
            app:layout_constraintTop_toBottomOf="@+id/et_decimal" />


        <ImageButton
            android:id="@+id/btn_clear"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="@drawable/calculate_btn_background"
            android:src="@drawable/ic_clear"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="@+id/et_hexadecimal"
            app:layout_constraintStart_toStartOf="@+id/et_hexadecimal"
            app:layout_constraintTop_toBottomOf="@id/et_hexadecimal" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>